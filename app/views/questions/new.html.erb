<div id="center">
  <p id="intro1">Can't get enough of<br/> i Usher ?<br/>
    Want to know more?</p>
  <p id="subintro1">We'd love to hear from you !</p>


  <div id="question-container">
<%= form_for @question do |f| %>
        <% if @question.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@question.errors.count, "error") %> prohibited this message from being delivered:</h3>
          <ul>
            <% @question.errors.full_messages.each do |msg| %>
                <li><%= msg %></li><br/>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div id="question">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />

    <%= f.label :email %><br/>
    <%= f.email_field :email%><br />

    <%= f.label :category %> <br/>
    <%= f.select :category, Question::CATEGORY_TYPES, prompt: "select a category" %><br />
    </div>

    <%= f.text_area :body, size: '10x10', class: 'text-question', value: "Enter your message here ..." %><br />

    <br/>
    <div id="question-button">
      <%= f.submit "submit", class: 'green button' %>
    </div>
<% end %>
</div>
</div>